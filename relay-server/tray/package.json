{
  "name": "megabonk-overlay",
  "version": "1.0.5",
  "description": "Overlay for Megabonk's ranked mod MegaLadder",
  "main": "main.js",
  "repository": "https://github.com/OxCone1/Megabonk-Overlay",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "relay:build": "cd .. && npm install && npm run build",
    "overlay:build": "cd ../../obs-megabonk-overlay && npm install && npm run build",
    "build:tray": "electron-builder --win --x64 --publish never",
    "build:tray:publish": "electron-builder --win --x64 --publish always",
    "dist": "npm install && npm-run-all -s relay:build overlay:build build:tray",
    "dist:publish": "npm install && npm-run-all -s relay:build overlay:build build:tray:publish"
  },
  "author": "OxCone",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "npm-run-all": "^4.1.5"
  },
  "build": {
    "appId": "com.megabonk.overlay",
    "productName": "MegaBonk Overlay",
    "extraResources": [
      {
        "from": "../dist/MegaBonkRelay.exe",
        "to": "MegaBonkRelay.exe"
      },
      {
        "from": "../../obs-megabonk-overlay/dist",
        "to": "overlay"
      }
    ],
    "win": {
      "icon": "images/megaicon_v2.ico",
      "target": [
        "nsis"
      ],
      "artifactName": "MegaBonkOverlay.exe"
    },
    "mac": {
      "icon": "images/megaicon_v2.icns"
    },
    "linux": {
      "icon": "images/megaicon_v2.png"
    },
    "directories": {
      "output": "../dist"
    },
    "publish": {
      "provider": "github",
      "owner": "OxCone1",
      "repo": "Megabonk-Overlay",
      "releaseType": "release"
    }
  }
}
